<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title_text_style">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="normal_long_text_style">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="error_text_style">
        <item name="android:textSize">@dimen/error_text_size</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="normal_text_style">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="player_toolbar_style">
        <item name="android:background">@color/gray</item>
        <item name="android:navigationIcon">@drawable/ic_back_arrow</item>
        <item name="android:titleTextAppearance">@style/title_text_style</item>
    </style>
</resources>